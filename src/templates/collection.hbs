<h4>Wellcome to collection {{collection.id}} view!</h4>
<div class="row">
	{{#collections}}
	<div class="col-sm-6 text-info">
		<div class="app-card collection">
			<div class="row">
				<div class="col-xs-5 image">
					<img src="{{attributes.image}}" class="img-responsive" alt="Image">
				</div>
				<div class="col-xs-7 details">
					<div class="name">{{attributes.name}}</div>
					<div class="date">{{moment attributes.date 'DD-MM-YY HH:MM'}}</div>
					<div class="items">{{attributes.items.current}} / {{attributes.items.total}}</div>
					<div class="actions">
						<div class="edit text-info"><i class="glyphicon glyphicon-edit"></i> Edit</div>
						<div class="remove text-danger"><i class="glyphicon glyphicon-remove-circle"></i> Remove</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	{{/collections}}
</div>